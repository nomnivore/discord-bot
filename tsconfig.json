{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "declaration": true,
    "noEmit": true,

    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
